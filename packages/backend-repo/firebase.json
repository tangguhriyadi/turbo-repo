{
    "functions": [
        {
            "source": "functions",
            "codebase": "default",
            "ignore": [
                "node_modules",
                ".git",
                "firebase-debug.log",
                "firebase-debug.*.log",
                "*.local"
            ],
            "predeploy": ["npm --prefix \"$RESOURCE_DIR\" run build"]
        }
    ],
    "emulators": {
        "functions": {
            "enabled": true,
            "port": 5000
        },
        "ui": {
            "enabled": true,
            "host": "localhost",
            "port": 4000
        }
    }
}
